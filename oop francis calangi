          this.brand= brand;
          this.fuel= fuel;
        }
    }
  class Car extends Vehicle {
        int doors;
    Car (String bramd,int fuel,int doors){
           super(brand,fuel);
           this.doors= doors;
   }
  void drive(){
    if fuel > 0 {
     fuel --;
   System.out.println(brand +" is driving. Fuel left:"+ fuel);
   }else{
     System.out.println("outoffuel!");
   }
 }
}
